<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置填充颜色-->
    <solid android:color="#fff"/>
    <!--设置四周的内边距-->
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp" />
    <!--设置边框-->
    <stroke
        android:width="2dp"
        android:color="#E4E4E4" />
    <!--设置圆角矩形-->
    <corners android:radius="8dp" />
</shape>
