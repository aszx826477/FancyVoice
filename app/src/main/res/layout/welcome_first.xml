<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="top.yelbee.www.myapplication.MainActivity"
    >


    <top.yelbee.www.myapplication.View.CustomVideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/slogan1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="在这里，"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:background="#00000000"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/slogan2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/slogan1"
            android:text="你的声音做主"
            android:textSize="40sp"
            android:padding="20dp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/first_logo"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_above="@+id/clickin"
            android:layout_marginBottom="20dp"
            android:background="#00000000"
            android:src="@mipmap/logo"
            />
        <TextView
            android:id="@+id/clickin"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/clickin_border"
            android:textAlignment="center"
            android:text="马上体验"
            android:textSize="20sp"
            android:textColor="@color/white"

            />

    </RelativeLayout>




</RelativeLayout>











